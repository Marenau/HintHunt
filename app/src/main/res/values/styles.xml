<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Background">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="AppNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_semi_bold</item>
    </style>

    <style name="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_medium</item>
    </style>

    <style name="MainCardView">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="cardCornerRadius">7dp</item>
    </style>

    <style name="MainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_selector_stroke_color</item>
        <item name="rippleColor">@null</item>
    </style>
</resources>