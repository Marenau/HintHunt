<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Background">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="AppNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_semi_bold</item>
    </style>

    <style name="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="cornerRadius">7dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_medium</item>
    </style>

    <style name="MainCardView">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="cardCornerRadius">7dp</item>
    </style>

    <style name="MainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="ButtonWithText">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/button_selector_stroke_color</item>
        <item name="rippleColor">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="ButtonWithBackground">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_medium</item>
        <item name="android:checkable">true</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">37dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:shadowColor">#D7000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="ScoreButton">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="WordButton">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="cornerRadius">7dp</item>
        <item name="rippleColor">@null</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BottomNavigation" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@color/light_gray</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>
</resources>